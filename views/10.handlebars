<form method="post" name="form" action="/10">
    <input type="number" name="idade" placeholder="Ex ano nascimento: 1956" min="0" step="0">
    <input type="number" name="anos" placeholder="Ex ano ingresso empresa: 2000" min="0" step="0">
    <button type="submit">Enviar</button>
    <a href="/"><button type="button" id="back">Voltar</button></a>
</form>

{{#if dados}}
<div class="message message-empty" id="message">
    <div class="title">
        {{mensagemTitulo}} <span class='negrito'>{{status}}</span>
        <button class="close" class="close"><i class='fa fa-times-circle'></i></button>
    </div>
    <div class="text" id="value">
        <p>{{mensagemTexto}}</p>
    </div>
</div>
{{/if}}
{{#if dadosValidos}}
<div class="message message-zero" id="message">
    <div class="title">
        {{mensagemTitulo}}
        <button class="close" class="close"><i class='fa fa-times-circle'></i></button>
    </div>
    <div class="text" id="value">
        <p>O funcionário tem {{idade}} anos e trabalha à {{anos}} anos. Portanto ele <span class='negrito'>{{aposentadoria}}</span></p>
    </div>
</div>
{{/if}}
<script type="text/javascript">
    var i;
    var close = document.getElementsByClassName("close");
    var message = document.getElementsByClassName("message");

    for (i = 0; i < close.length; i++) {
        close[i].addEventListener("click", closeMessage);
    }

    function closeMessage() {
        var idade = document.forms["form"]["idade"];
        var anos = document.forms["form"]["anos"];
        idade.value = "";
        anos.value = "";

        for (i = 0; i < message.length; i++) {
            message[i].style.display = "none";
        }
    }

</script>