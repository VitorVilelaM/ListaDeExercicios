<form method="post" name="form" action="/9">
    <input type="number" name="number" placeholder="Ex litros: 4,5" min="0" step="0.01">
    <select name="tipo">
        <option disabled selected id="fake" value="f">Tipo de Combustível</option>
        <option value="a">Álcool</option>
        <option value="g">Gasolina</option>
    </select>
    <button type="submit">Enviar</button>
    <a href="/"><button type="button" id="back">Voltar</button></a>
</form>

{{#if dados}}
<div class="message message-empty" id="message">
    <div class="title">
        {{mensagemTitulo}} <span class='negrito'>{{status}}</span>
        <button class="close" class="close"><i class='fa fa-times-circle'></i></button>
    </div>
    <div class="text" id="value">
        <p>{{mensagemTexto}}</p>
    </div>
</div>
{{/if}}
{{#if dadosValidos}}
<div class="message message-zero" id="message">
    <div class="title">
        {{mensagemTitulo}}
        <button class="close" class="close"><i class='fa fa-times-circle'></i></button>
    </div>
    <div class="text" id="value">
        <p>O valor total do combustível é <span class='negrito'>R$ {{total}} </span> sendo desses R$ {{desconto}} o desconto.</p>
    </div>
</div>
{{/if}}

<script type="text/javascript">
    var i;
    var close = document.getElementsByClassName("close");
    var message = document.getElementsByClassName("message");

    for (i = 0; i < close.length; i++) {
        close[i].addEventListener("click", closeMessage);
    }

    function closeMessage() {
        var number = document.forms["form"]["number"];
        var tipo = document.forms["form"]["tipo"];
        number.value = "";
        tipo.value = "f";

        for (i = 0; i < message.length; i++) {
            message[i].style.display = "none";
        }
    }
</script>