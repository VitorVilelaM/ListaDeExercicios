<form method="post" name="form" action="/7">
    <input type="number" name="number" placeholder="Ex salário/hora: 10,50" min="0" step="0.01">
    <input type="number" name="horas" placeholder="Ex horas %: 160" min="0">
    <button type="submit">Enviar</button>
    <a href="/"><button type="button" id="back">Voltar</button></a>
</form>

{{#if dados}}
<div class="message message-empty" id="message">
    <div class="title">
        {{mensagemTitulo}} <span class='negrito'>{{status}}</span>
        <button class="close" class="close"><i class='fa fa-times-circle'></i></button>
    </div>
    <div class="text" id="value">
        <p>{{mensagemTexto}}</p>
    </div>
</div>
{{/if}}
{{#if dadosValidos}}
<div class="message message-zero" id="message">
    <div class="title">
        {{mensagemTitulo}}
        <button class="close" class="close"><i class='fa fa-times-circle'></i></button>
    </div>

    <div class="text" id="value">
       <p class='top-value'>O valor do salário total com horas extras é <span class='negrito'>R$ {{total}} </span> sendo desses R${{value_extra}} o valor total das horas extras.</p>
    </div>
</div>
{{/if}}

<script type="text/javascript">
    var i;
    var close = document.getElementsByClassName("close");
    var message = document.getElementsByClassName("message");

    for (i = 0; i < close.length; i++) {
        close[i].addEventListener("click", closeMessage);
    }

    function closeMessage() {
        var number = document.forms["form"]["number"];
        var horas = document.forms["form"]["horas"];
        number.value = "";
        horas.value = "";

        for (i = 0; i < message.length; i++) {
            message[i].style.display = "none";
        }
    }
</script>